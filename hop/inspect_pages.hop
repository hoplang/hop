		</with-body>
	</heading-box>
	<hop-x-preview>
		<module-item>
			<with-heading>hop/test-module</with-heading>
			<with-body>
				<component-item>
					<with-name>test-component</with-name>
					<with-parameters>void</with-parameters>
					<with-slots>foo, bar</with-slots>
				</component-item>
				<component-item>
					<with-name>test-component</with-name>
					<with-parameters>void</with-parameters>
					<with-slots>foo, bar</with-slots>
				</component-item>
			</with-body>
		</module-item>
	</hop-x-preview>
</module-item>

<inspector-view>
