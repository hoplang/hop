<import component="heading-box" from="hop/ui">
<import component="page-container" from="hop/ui">

<component-item>
	<heading-box>
		<with-title>
		  Component
		</with-title>
		<with-heading>
		  <slot-name />
		</with-heading>
		<with-body>
		  parameters: <slot-parameters/><br/>
		  slots: <slot-slots/>
		</with-body>
	</heading-box>
	<hop-x-preview>
		<component-item>
			<with-name>test-component</with-name>
			<with-parameters>void</with-parameters>
			<with-slots>foo, bar, baz</with-slots>
		</component-item>
	</hop-x-preview>
</component-item>

<module-item>
	<heading-box {true}>
		<with-title>Module</with-title>
		<with-heading>
			<slot-heading />
		</with-heading>
		<with-body>
