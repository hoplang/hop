import lucide::Form

record Component {
  name: String,
}

record Module {
  name: String,
  components: Array[Component],
}

entrypoint Program(modules: Array[Module] = []) {
  <body class="mt-12 mb-30" style="background: #308d60;">
    <div
      class="max-w-7xl mx-auto"
      style="font-family: monospace;"
    >
      <h1 class="bg-black text-white text-lg p-4 mb-12 inline-block">
        modules
      </h1>
      <div class="grid grid-cols-2 lg:grid-cols-4 gap-4">
        <for {module in modules}>
          <div class="p-4 bg-black text-white">
            <div class="flex items-center justify-between">
              <h1 class="text-lg">
                {module.name}
              </h1>
            </div>
            <details class="text-[14px] p-2 mt-2">
              <summary>
                Components
              </summary>
              <ul>
                <for {c in module.components}>
                  <li>
                    {c.name}
                  </li>
                </for>
              </ul>
            </details>
          </div>
        </for>
      </div>
      <pre class="bg-black text-white m-4 inline-block p-3 leading-tight">
        {"   ___  ______________  _____ \n"}
        {" / _ \\/ ___/ ___/ __ \\/ ___/ \n"}
        {"/  __/ /  / /  / /_/ / /     \n"}
        {"\\___/_/  /_/   \\____/_/      \n"}
      </pre>
      <pre class="bg-black text-white p-4 inline-block m-4 leading-tight">
        {"Linux\n"}
        {"├─Android\n"}
        {"├─Debian\n"}
        {"│  ├─Ubuntu\n"}
        {"│  │  ├─Lubuntu\n"}
        {"│  │  └─Kubuntu\n"}
        {"│  └─Mint\n"}
        {"├─Centos\n"}
        {"└─Fedora\n"}
      </pre>
    </div>
  </body>
}
