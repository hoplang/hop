import lucide::CircleAlert

entrypoint Overlay(
  message: String = "Error! Something went wrong.",
) {
  <body class="bg-[#f3f3f3]/90">
    <div class={
      join!(
        "py-18",
        "md:px-14",
        "max-w-4xl",
        "mx-auto",
        "flex",
        "flex-col",
        "gap-6",
      )
    }>
      <div class={
        join!(
          "bg-white",
          "p-12",
          "py-8",
          "md:rounded-md",
          "border-t-[#ff6a6a]",
          "border-t-5",
          "grid",
          "md:grid-cols-[1fr_32px]",
        )
      }>
        <pre class="overflow-auto">
          {message}
        </pre>
        <CircleAlert class={
          join!(
            "hidden",
            "md:block",
            "text-[#ff6a6a]",
          )
        }/>
      </div>
    </div>
  </body>
}
