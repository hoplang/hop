    classes!(
      "bg-[rgba(41,_39,_39,_0.98)]",
      "absolute",
      "inset-0",
      "overflow-auto",
    )
  }>
    <div class={
      classes!(
        "py-12",
        "md:px-14",
        "max-w-4xl",
        "mx-auto",
        "flex",
        "flex-col",
        "gap-6",
      )
    }>
      <div class={
        classes!(
          "flex",
          "justify-center",
        )
      }>
        <AsciiError class="text-[#ff6a6a]"/>
      </div>
      <div class={
        classes!(
          "bg-[#201f1f]",
          "p-12",
          "py-8",
          "md:rounded-md",
          "border-t-[#ff6a6a]",
          "border-t-5",
          "text-white",
          "grid",
          "md:grid-cols-[1fr_32px]",
        )
      }>
        <pre class="overflow-scroll">
          {message}
        </pre>
        <ErrorIcon class={
          classes!(
            "hidden",
            "md:block",
            "text-[#ff6a6a]",
          )
        }/>
      </div>
    </div>
