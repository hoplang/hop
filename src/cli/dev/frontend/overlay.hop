import lucide::CircleAlert

entrypoint Overlay(message: String = "Error! Something went wrong.") {
  <body class={
    classes!(
      "bg-[#f3f3f3]/90",
    )
  }>
    <div class={
      classes!(
        "py-18",
        "md:px-14",
        "max-w-4xl",
        "mx-auto",
        "flex",
        "flex-col",
        "gap-6",
      )
    }>
      <div class={
        classes!(
          "bg-white",
          "p-12",
          "py-8",
          "md:rounded-md",
          "border-t-[#ff6a6a]",
          "border-t-5",
          "grid",
          "md:grid-cols-[1fr_32px]",
        )
      }>
        <pre class="overflow-scroll">
          {message}
        </pre>
        <CircleAlert class={
          classes!(
            "hidden",
            "md:block",
            "text-[#ff6a6a]",
          )
        }/>
      </div>
    </div>
  </body>
}
