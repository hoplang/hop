-- main.hop --
<component name="card" params-as="item">
  <div set-inner-text="item.title">
  </div>
  <cond if="item.active">
    <span set-inner-text="item.status">
    </span>
  </cond>
</component>

<component name="list" params-as="items">
  <for each="items" as="item">
    <render component="card" params="item"/>
  </for>
</component>

<component name="main" params-as="data">
  <render component="list" params="data.items"/>
</component>
-- out --
main::card : {active: boolean, status: string, title: string}
main::list : {active: boolean, status: string, title: string}[]
main::main : {items: {active: boolean, status: string, title: string}[]}
