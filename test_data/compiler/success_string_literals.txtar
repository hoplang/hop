-- main.hop --
<component name="main" params-as="params">
  <cond if="params.role == 'admin'">
    <div>Admin Access</div>
  </cond>
  <cond if="params.status == 'active'">
    <div>Active User</div>
  </cond>
  <cond if="params.status == 'inactive'">
    <div>Inactive User</div>
  </cond>
</component>
-- data.json --
{
  "role": "admin",
  "status": "active"
}
-- output.html --
<div data-hop-id="main/main">
  <div>Admin Access</div>
  <div>Active User</div>
</div>
