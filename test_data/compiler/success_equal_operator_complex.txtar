-- main.hop --
<component name="main" params-as="params">
  <cond if="params.user.name == params.admin.name">
    <div>Is Admin</div>
  </cond>
  <cond if="params.status == params.expected_status">
    <div>Status OK</div>
  </cond>
</component>
-- data.json --
{
  "user": {"name": "alice"},
  "admin": {"name": "alice"},
  "status": "active",
  "expected_status": "active"
}
-- output.html --
<div data-hop-id="main/main">
  <div>Is Admin</div>
  <div>Status OK</div>
</div>
