-- main.hop --
<main-card>
    <div class="card">
        <slot-header></slot-header>
        <div class="body">
            <slot-content></slot-content>
        </div>
        <slot-footer></slot-footer>
    </div>
</main-card>

<main-comp entrypoint params-as="data">
    <main-card>
        <with-header>
            <h1 set-inner-text="data.title"></h1>
        </with-header>
        <with-content>
            <for each="data.users" as="user">
                <cond if="user.active">
                    <div class="user-item">
                        <span set-inner-text="user.name"></span>
                        <cond if="user.admin">
                            <strong> (Admin)</strong>
                        </cond>
                    </div>
                </cond>
            </for>
        </with-content>
        <with-footer>
            <p>Total active users: <span set-inner-text="data.active_count"></span></p>
        </with-footer>
    </main-card>
</main-comp>
