-- main.hop --
<component name="main" params-as="items">
  <for each="items" as="item">
    <div>
      <span set-inner-text="item.name"></span>
      <cond if="item.type == 'admin'">
        <strong> [Admin]</strong>
      </cond>
      <cond if="item.type == 'user'">
        <em> [User]</em>
      </cond>
    </div>
  </for>
</component>
