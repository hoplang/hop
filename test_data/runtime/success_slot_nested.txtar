-- main.hop --
<component name="page-layout">
    <div class="page">
        <slot-content></slot-content>
    </div>
</component>

<component name="modal-wrapper">
    <div class="modal-container">
        <slot-modal></slot-modal>
    </div>
</component>

<component name="modal">
    <div class="modal">
        <div class="modal-header">
            <slot-header></slot-header>
        </div>
        <div class="modal-body">
            <slot-body></slot-body>
        </div>
    </div>
</component>

<component name="main" entrypoint params-as="data">
    <render component="page-layout">
        <with-content>
            <h1 set-inner-text="data.page_title"></h1>
            <render component="modal-wrapper">
                <with-modal>
                    <render component="modal">
                        <with-header>
						  	<span>header</span>
                        </with-header>
                        <with-body>
                            <span>body</span>
                        </with-body>
                    </render>
                </with-modal>
            </render>
        </with-content>
    </render>
</component>
-- data.json --
{
    "page_title": "Welcome Page"
}
-- output.html --
<div data-hop-id="main/page-layout">
    <div class="page">
        <h1>Welcome Page</h1>
        <div data-hop-id="main/modal-wrapper">
            <div class="modal-container">
                <div data-hop-id="main/modal">
                    <div class="modal">
                        <div class="modal-header">
                            <span>header</span>
                        </div>
                        <div class="modal-body">
                            <span>body</span>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
