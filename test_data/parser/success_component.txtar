-- main.hop --
<component name="main" params-as="sections">
	<div>
		<for each="sections" as="section">
			<div>
				<h2 set-inner-text="section.title"></h2>
				<for each="section.items" as="item">
					<p set-inner-text="item"></p>
				</for>
			</div>
		</for>
	</div>
</component>
